<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<!-- TODO: why dynamic plugins doesn't work on status widget? -->
<idea-plugin require-restart="true">
	<!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
	<id>dev.stillya.vpet</id>

	<!-- Public plugin name should be written in Title Case.
		 Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
	<name>Vpet</name>

	<!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
	<vendor>stillya</vendor>

	<!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
		 Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
		 Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
	<description><![CDATA[
    Animated pixel art in your IDE status bar.
  ]]></description>

	<!-- Product and plugin compatibility requirements.
		 Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
	<depends>com.intellij.modules.platform</depends>
	<depends>com.intellij.modules.lang</depends>
	<depends>com.intellij.modules.java</depends>

	<!-- Extension points defined by the plugin.
		 Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
	<extensions defaultExtensionNs="com.intellij">
		<statusBarWidgetFactory
				implementation="dev.stillya.vpet.AnimatedStatusBarWidgetFactory"
				id="vpet"/>

		<applicationService
				serviceInterface="dev.stillya.vpet.AtlasLoader"
				serviceImplementation="dev.stillya.vpet.config.AsepriteJsonAtlasLoader"/>
		<applicationService
				serviceImplementation="dev.stillya.vpet.settings.VPetSettings"/>

		<applicationConfigurable
				parentId="tools"
				instance="dev.stillya.vpet.settings.VPetSettingsConfigurable"
				id="dev.stillya.vpet.settings.VPetSettingsConfigurable"
				displayName="VPet"/>

		<projectService
				serviceImplementation="dev.stillya.vpet.service.ActivityTracker"/>
		<projectService
				serviceInterface="dev.stillya.vpet.IconRenderer"
				serviceImplementation="dev.stillya.vpet.graphics.DefaultIconRenderer"/>
		<projectService
				serviceInterface="dev.stillya.vpet.Animated"
				serviceImplementation="dev.stillya.vpet.pet.PetAnimated"/>
		<projectService
				serviceImplementation="dev.stillya.vpet.game.GameController"/>

	</extensions>

	<projectListeners>
		<listener class="dev.stillya.vpet.listener.BuildEventListener"
				  topic="com.intellij.task.ProjectTaskListener"/>
	</projectListeners>
	<projectListeners>
		<listener class="dev.stillya.vpet.listener.BuildEventListener"
				  topic="com.intellij.execution.ExecutionListener"/>
	</projectListeners>
	<projectListeners>
		<listener class="dev.stillya.vpet.service.AnimationEventService"
				  topic="dev.stillya.vpet.AnimationEventListener"/>
	</projectListeners>
</idea-plugin>